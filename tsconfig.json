{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "lib": [
      "es2018"
    ],
    "target": "es5",
    "outDir": "dist/",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.spec.ts"
  ]
}
